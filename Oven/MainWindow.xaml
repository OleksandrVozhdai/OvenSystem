                        <Button.Background>
                            <ImageBrush ImageSource="/ovenicon.png"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="HoodButton" HorizontalAlignment="Left" Height="200" Margin="117,0,0,0" VerticalAlignment="Center" Width="200" Opacity="0.989" BorderThickness="3" BorderBrush="Black" Cursor="Hand" ClickMode="Press" Style="{DynamicResource ButtonMainMenuStyle}" Click="Hood_Click" Grid.Column="1">
                        <Button.Background>
                            <ImageBrush ImageSource="/rangeHood.png"/>
