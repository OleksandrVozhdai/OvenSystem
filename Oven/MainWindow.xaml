    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="/forest.jpg"/>
    </Window.Background>
    <Border Name ="MenuBorder" CornerRadius="20" Padding ="20" Opacity="0.5" Margin="20, 20,20,20">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
